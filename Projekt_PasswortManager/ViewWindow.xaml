<Window x:Class="Projekt_PasswortManager.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort anzeigen" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">

            <!-- Passwortanzeige -->
            <TextBlock x:Name="PasswortText"
                       FontSize="20"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Umschalt-Button -->
            <Button x:Name="ToggleButton"
                    Content="Anzeigen"
                    Width="100"
                    HorizontalAlignment="Center"
                    Click="ToggleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>