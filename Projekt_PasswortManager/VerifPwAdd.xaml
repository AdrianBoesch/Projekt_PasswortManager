<Window x:Class="Projekt_PasswortManager.VerifPwAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App hinzufügen" Height="280" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <!-- Altes Passwort -->
            <TextBlock Text="Altes Passwort:"/>
            <TextBox x:Name="AltesPasswortBox" Margin="0,0,0,10"/>

            <!-- Neues Passwort -->
            <TextBlock Text="Neues Passwort:"/>
            <TextBox x:Name="NeuesPasswortBox" Margin="0,0,0,10"/>

            <!-- Aktuelles Eingabefeld (sichtbar/versteckt) -->
            <TextBlock Text="Passwort anzeigen:"/>
            <Grid>
                <PasswordBox x:Name="PasswortBox" Margin="0,0,30,0" PasswordChanged="PasswortBox_PasswordChanged"/>
                <TextBox x:Name="PasswortTextBox" Margin="0,0,30,0" Visibility="Collapsed" TextChanged="PasswortTextBox_TextChanged"/>
                <Button x:Name="ToggleBtn" Content="👁" Width="25" Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="ToggleBtn_Click"/>
            </Grid>
        </StackPanel>

        <!-- Button -->
        <Button Grid.Row="1"
                Content="Hinzufügen"
                HorizontalAlignment="Right"
                Width="100"
                Margin="0,10,0,82"
                Click="Hinzufügen_Click"/>
    </Grid>
</Window>
