<Window x:Class="Projekt_PasswortManager.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort prüfen" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Bitte Passwort eingeben:" FontSize="14"/>
        <PasswordBox x:Name="PasswordCheckBox" Margin="0,5"/>
        <Button Content="Prüfen" Width="80" HorizontalAlignment="Right" Click="Pruefen_Click"/>
    </StackPanel>
</Window>
